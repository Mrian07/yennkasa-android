<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_8"
    android:paddingRight="@dimen/material_8"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/iv_message_preview"
        android:layout_width="@dimen/sp_sticker_item_size"
        android:layout_height="@dimen/sp_sticker_item_size"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:contentDescription="@string/sticker"
        android:scaleType="fitStart"
        tools:ignore="RtlHardcoded"
        tools:src="@drawable/sp_ic_stickers" />

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_message_preview"
        android:layout_marginBottom="@dimen/material_8"
        android:background="@color/transparent"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"
        tools:ignore="RtlHardcoded"
        tools:text="Today, 9.18" />

</RelativeLayout>
