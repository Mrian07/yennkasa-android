<com.pair.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              xmlns:app="http://schemas.android.com/apk/res-auto"
                              xmlns:tools="http://schemas.android.com/tools"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@drawable/bg_messages">

    <include layout="@layout/toolbar"/>

    <com.pair.view.RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginLeft="@dimen/chat_activity_side_margin"
        android:layout_marginRight="@dimen/chat_activity_side_margin"
        android:layout_marginTop="2dp"
        android:background="#0000">

        <com.pair.view.LinearLayout
            android:id="@+id/ll_list_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:background="#0000"
            android:gravity="top"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0000"
                android:divider="@null"
                android:dividerHeight="16dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:transcriptMode="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/what_ever_name_dp"
                android:background="@color/transparent"
                android:animateLayoutChanges="true"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_input_message_card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:ems="10"
                        android:inputType="text|textLongMessage|textMultiLine"
                        android:maxHeight="@dimen/multiline_text_box_max_height"
                        android:textColor="@color/black"
                        android:hint="@string/message_box_hint"
                        android:textSize="@dimen/edit_text_size"
                        tools:ignore="HardcodedText"/>
                </android.support.v7.widget.CardView>

                <com.rey.material.widget.FloatingActionButton
                    android:id="@+id/iv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    app:fab_backgroundColor="@color/white"
                    app:fab_elevation="8dp"
                    android:visibility="gone"
                    app:fab_iconSize="@dimen/fab_icon_size_small"
                    app:fab_radius="@dimen/fab_icon_radius_small"/>
            </LinearLayout>
        </com.pair.view.LinearLayout>

        <!--<include-->
        <!--layout="@layout/message_item_session_date"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="center"-->
        <!--android:text="2/2/2015"-->
        <!--android:textSize="@dimen/log_message_text_size"-->
        <!--android:visibility="gone"/>-->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_date_header_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/header_date_message_margin_top"
            android:visibility="visible"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tv_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="@dimen/date_message_paddingTop"
                android:text="2/2/2015"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/log_message_text_size"
                tools:ignore="HardcodedText"/>
        </android.support.v7.widget.CardView>
    </com.pair.view.RelativeLayout>

    <include
        layout="@layout/snack_bar"
        />
</com.pair.view.RelativeLayout>