<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/app_name"
        app:theme="@style/AppBar" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginLeft="@dimen/chat_activity_side_margin"
        android:layout_marginRight="@dimen/chat_activity_side_margin"
        android:layout_marginTop="2dp"
        android:background="#0000">

        <LinearLayout
            android:id="@+id/ll_list_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:background="#0000"
            android:gravity="top"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0000"
                android:divider="@null"
                android:dividerHeight="16dp"
                android:scrollbars="none"
                android:transcriptMode="normal" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_input_message_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/ll_input_message_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:minHeight="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_attach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_action_new_attachment" />

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxHeight="80dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_action_send_now" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_date_header_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/header_date_message_margin_top"
            app:cardCornerRadius="4dp"
            android:visibility="gone"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tv_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:maxWidth="@dimen/date_message_max_width"
                android:padding="@dimen/date_message_padding"
                android:text="2/2/2015"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/date_message_text_size" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <com.rey.material.widget.SnackBar
        android:id="@+id/notification_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone"
        app:sb_actionText="@string/close"
        app:sb_actionTextColor="@color/white" />

</RelativeLayout>