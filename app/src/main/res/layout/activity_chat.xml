<com.idea.view.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hd">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        style="@style/TabRippleStyle"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:animateLayoutChanges="true"
        android:background="?attr/colorPrimary"
        android:gravity="start"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/app_name"
        app:popupTheme="@style/popup_theme"
        app:theme="@style/AppBar"
        tools:ignore="UnusedAttribute"/>

    <com.idea.view.RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="2dp"
        android:animateLayoutChanges="true"
        android:background="#0000"
        tools:ignore="UnusedAttribute">

        <com.idea.view.RelativeLayout
            android:id="@+id/attachment_picker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.idea.view.RelativeLayout>

        <com.idea.view.LinearLayout
            android:id="@+id/ll_list_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:gravity="top"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/padding_ll_login_fragment_bottom"
                android:layout_marginLeft="@dimen/chat_activity_side_margin"
                android:layout_marginRight="@dimen/chat_activity_side_margin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:divider="@null"
                android:dividerHeight="@dimen/chat_activity_list_divider_hieght"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:transcriptMode="normal"
                tools:ignore="UnusedAttribute"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:background="@drawable/compose_panel"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/padding_ll_login_fragment_left"
                android:paddingRight="@dimen/padding_ll_login_fragment_right"
                android:paddingTop="8dp"
                tools:ignore="UnusedAttribute">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:background="@color/transparent"
                    android:layout_marginLeft="@dimen/padding_ll_login_fragment_bottom"
                    android:layout_marginRight="@dimen/padding_ll_login_fragment_bottom"
                    android:onClick="attachCamera"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_msg_panel_smiles"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="bottom"
                        android:hint="@string/message_box_hint"
                        android:inputType="textMultiLine|textLongMessage"
                        android:maxHeight="@dimen/multiline_text_box_max_height"
                        android:padding="@dimen/padding_ll_login_fragment_right"
                        android:textSize="@dimen/edit_text_size"
                        />
                    <!--android:text="llaaal\nlkklkk\nkklkjkjlkk\nkljklkkjlklk\nkljkljklkklk"-->
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:background="@color/transparent"
                    android:onClick="attachCamera"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_ll_login_fragment_bottom"
                    android:adjustViewBounds="true"
                    android:background="@color/transparent"
                    android:onClick="attachVoiceNote"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mic_black_24dp"
                    />

                <com.idea.view.FrameLayout
                    android:id="@+id/iv_send"
                    style="@style/FlatButtonRippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/padding_ll_login_fragment_bottom"
                    android:background="@drawable/green_round_back_ground"
                    android:padding="@dimen/padding_ll_login_fragment_bottom"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_send_white_24dp"/>

                </com.idea.view.FrameLayout>

            </LinearLayout>

