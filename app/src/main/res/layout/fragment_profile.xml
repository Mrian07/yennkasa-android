<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context="com.pair.pairapp.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/display_picture"
            android:id="@+id/iv_display_picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_empty"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_display_picture"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/bt_change_dp"
            android:text="@string/change_dp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:id="@+id/ll_detail_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_user_name"
                android:maxLength="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="15dp"
                android:text="@string/username_placeholder"
                android:textColor="#000"
                android:textSize="18sp"/>

            <ImageButton
                android:contentDescription="@string/edit_username"
                android:id="@+id/ib_change_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_alignTop="@+id/tv_user_name"/>

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_below="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:lines="2"
                android:padding="15dp"
                android:text="Phone\n0266349205"
                android:textColor="#000"
                android:textSize="18sp"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
