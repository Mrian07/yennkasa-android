<com.pair.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pair.pairapp.ui.ProfileFragment">

    <com.pair.view.FrameLayout
        android:id="@+id/fl_dp_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_display_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_height"
            android:contentDescription="@string/display_picture"
            android:scaleType="fitXY"
            android:src="@drawable/user_avartar" />

        <com.rey.material.widget.ProgressView
            android:id="@+id/pb_progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:pv_progressStyle="@style/base_indeterminate_progress_style" />

        <com.pair.view.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="#0000">

            <com.pair.view.RoundedImageView
                android:id="@+id/bt_take_photo_change_dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/white_round"
                android:contentDescription="@string/change_dp"
                style="@style/FlatWaveColorButtonRippleStyle"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_camera" />

            <com.pair.view.RoundedImageView
                android:id="@+id/bt_pick_photo_change_dp"
                style="@style/FlatWaveColorButtonRippleStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/white_round"
                android:contentDescription="@string/change_dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_picture" />
        </com.pair.view.LinearLayout>
    </com.pair.view.FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_dp_panel">

        <com.pair.view.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.pair.view.LinearLayout
                android:id="@+id/rl_buttons_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center">

                <com.rey.material.widget.Button
                    android:id="@+id/bt_message"
                    style="@style/round_buttons"
                    android:drawableRight="@drawable/ic_action_chat_white"
                    android:text="@string/message" />

                <com.rey.material.widget.Button
                    android:id="@+id/bt_call"
                    style="@style/round_buttons"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_action_call"
                    android:text="@string/call"
                    android:visibility="visible" />

                <com.rey.material.widget.Button
                    android:id="@+id/bt_dissolve_group"
                    style="@style/round_buttons"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_action_discard"
                    android:text="@string/dissolve_group"
                    android:visibility="gone" />

                <com.rey.material.widget.Button
                    android:id="@+id/bt_exit_group"
                    style="@style/round_buttons"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_action_discard"
                    android:text="@string/leave"
                    android:visibility="gone" />
            </com.pair.view.LinearLayout>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_buttons_panel"
                android:clickable="true"
                android:padding="15dp"
                android:text="@string/username_placeholder"
                android:textColor="#000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ib_change_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rl_buttons_panel"
                android:layout_alignTop="@+id/tv_user_name"
                android:background="#0000"
                android:contentDescription="@string/edit_username"
                android:paddingTop="4dp"
                android:src="@drawable/ic_action_edit" />

            <com.pair.view.LinearLayout

                android:id="@+id/ll_details_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:lines="2"
                    android:padding="15dp"
                    android:text="Phone\n"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_list_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/st_mutual_groups"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </com.pair.view.LinearLayout>
        </com.pair.view.RelativeLayout>
    </ScrollView>
</com.pair.view.RelativeLayout>
