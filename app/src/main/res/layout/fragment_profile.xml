<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pair.pairapp.ui.ProfileFragment">

    <ImageView
        android:id="@+id/iv_display_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/display_picture"
        android:scaleType="fitXY"
        android:src="@drawable/avatar_empty"
        />

    <Button
        android:id="@+id/bt_change_dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_display_picture"
        android:layout_toRightOf="@+id/bt_message"
        android:text="@string/change_dp"/>

    <Button
        android:id="@+id/bt_exit_group"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_display_picture"
        android:layout_toRightOf="@+id/bt_message"
        android:text="@string/leave"/>

    <Button
        android:id="@+id/bt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_display_picture"
        android:text="@string/message"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_display_picture"
        android:clickable="true"
        android:maxLength="20"
        android:padding="15dp"
        android:text="@string/username_placeholder"
        android:textColor="#000"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/ib_change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_user_name"
        android:contentDescription="@string/edit_username"
        android:src="@android:drawable/ic_menu_edit"/>

    <LinearLayout
        android:id="@+id/ll_members_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:lines="2"
            android:padding="15dp"
            android:text="Phone\n"
            android:textColor="#000"
            android:textSize="18sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_list_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="@string/st_mutual_groups"
            android:textColor="#000"
            android:textSize="18sp"/>

        <ListView
            android:id="@+id/lv_mutual_groups_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>
    </LinearLayout>
</RelativeLayout>
