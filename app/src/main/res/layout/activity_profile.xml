<com.idea.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idea.ui.ProfileActivity">

    <com.idea.view.FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_below="@+id/main_toolbar"
        android:layout_height="wrap_content">
    </com.idea.view.FrameLayout>
    <include layout="@layout/toolbar"/>
    <include layout="@layout/snack_bar"/>
</com.idea.view.RelativeLayout>
