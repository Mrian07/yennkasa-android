<com.pairapp.view.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pairapp.view.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pairapp.view.FrameLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.pairapp.view.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.design.widget.TabLayout
                    android:id="@+id/pts_title_strip"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:tabIndicatorColor="@color/white"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/faded_white"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark" />

                <include layout="@layout/inline_notification_bar_layout" />

                <com.pairapp.view.CustomViewPager
                    android:id="@+id/vp_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.pairapp.view.LinearLayout>
        </com.pairapp.view.FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:title=""
            android:visibility="gone"
            app:theme="@style/AppBar" />
    </com.pairapp.view.LinearLayout>

    <com.rey.material.widget.SnackBar
        android:id="@+id/notification_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone"
        app:sb_actionText="@string/close"
        app:sb_actionTextColor="@color/white"
        app:sb_ellipsize="end"
        app:sb_textColor="@color/white" />
</com.pairapp.view.FrameLayout>
