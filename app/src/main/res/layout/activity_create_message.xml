<com.idea.view.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idea.ui.CreateMessageActivity">

    <com.idea.view.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="#0000"
        android:orientation="vertical"
        tools:ignore="UnusedAttribute">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:animateLayoutChanges="true"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:title="@string/app_name"
                app:theme="@style/AppBar"
                tools:ignore="UnusedAttribute">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_menu_item_attach"
                    style="@style/FlatWaveColorButtonRippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_action_new_attachment_white"
                    android:drawableStart="@drawable/ic_action_new_attachment_white"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textAppearance="@style/TabTextAppearance"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_menu_item_send"
                    style="style/FlatWaveColorButtonRippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_send_white_24dp"
                    android:drawableRight="@drawable/ic_send_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:text=""
                    android:textAppearance="@style/TabTextAppearance"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </android.support.v7.widget.Toolbar>

            <include
                layout="@layout/search_bar"
                android:visibility="gone"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.CardView
            android:id="@+id/attachment_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_ll_login_fragment_bottom"
            android:animateLayoutChanges="true"
            android:visibility="visible"
            app:cardCornerRadius="2dp"
            app:cardElevation="8dp"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_ll_login_fragment_right"
                android:layout_marginLeft="@dimen/padding_ll_login_fragment_left"
                android:layout_marginRight="@dimen/padding_ll_login_fragment_right"
                android:layout_marginStart="@dimen/padding_ll_login_fragment_left"
                android:background="@color/transparent"
                android:descendantFocusability="afterDescendants"
                android:gravity="center_vertical"
                android:padding="@dimen/message_input_padding">

                <TextView
                    android:id="@+id/attachment_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:ellipsize="start"
                    android:maxLines="3"
                    android:text="binary message"
                    android:textColor="@color/preferred_primary_color"
                    android:textSize="@dimen/standard_text_size"
                    tools:ignore="HardcodedText"/>

                <com.idea.view.FrameLayout
                    style="@style/FlatWaveButtonRippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/green_round_back_ground">

                    <ImageButton
                        android:id="@+id/cancel_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:contentDescription="@string/content_description_remove_attachment"
                        android:src="@drawable/ic_clear_white_24dp"/>
                </com.idea.view.FrameLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:gravity="center"
            android:layout_margin="@dimen/padding_ll_login_fragment_right"
            >
            <EditText
                android:id="@+id/et_message"
                style="@style/message_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                />
                <!--android:text="lll\nlkklkk\nkklkjkjlkk\nkljklkkjlklk\nkljkljklkklk"-->
        </LinearLayout>
    </com.idea.view.LinearLayout>

    <include
        layout="@layout/snack_bar"/>
</com.idea.view.RelativeLayout>
