<com.pair.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                              xmlns:tools="http://schemas.android.com/tools"
                              android:id="@+id/fr_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preferred_primary_color">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_32dp"
        android:paddingTop="@dimen/tv_app_name_title_padding_top"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/app_name_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:text="@string/subtitle"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sub_title_app_name_size"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.CardView
        android:id="@+id/login_sign_up_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginLeft="@dimen/login_fragment_cardview_margin_left"
        android:layout_marginRight="@dimen/login_fragment_cardview_margin_right"
        android:layout_marginEnd="@dimen/login_fragment_cardview_margin_right"
        android:layout_marginStart="@dimen/login_fragment_cardview_margin_left"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@android:color/white"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <com.pair.view.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_ll_login_fragment_bottom"
            android:paddingLeft="@dimen/padding_ll_login_fragment_left"
            android:paddingRight="@dimen/padding_ll_login_fragment_right"
            android:paddingTop="@dimen/padding_ll_login_fragment_top"
            tools:ignore="RtlHardcoded">

            <com.rey.material.widget.Spinner
                android:id="@+id/sp_ccc"
                style="@style/Material.Widget.Spinner.Light"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                app:rd_delayClick="afterRelease"
                app:rd_enable="true"
                app:rd_style="@style/selectedListItemStyle"
                app:spn_arrowAnimDuration="@android:integer/config_shortAnimTime"
                app:spn_arrowInterpolator="@android:anim/decelerate_interpolator"
                app:spn_labelTextSize="@dimen/edit_text_size"
                app:spn_arrowSwitchMode="true">
                <requestFocus />
            </com.rey.material.widget.Spinner>

            <EditText
                android:id="@+id/et_username"
                style="@style/username_editText_style"
                android:paddingTop="@dimen/padding_ll_login_fragment_top"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_phone_number_field"
                style="@style/phone_number_editText_style"
                android:paddingTop="@dimen/padding_ll_login_fragment_top"
                android:layout_height="wrap_content"/>

            <com.rey.material.widget.Button
                android:id="@+id/bt_loginButton"
                style="@style/RaiseWaveColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginTop="@dimen/padding_ll_login_fragment_top"
                android:background="#225eb964"
                android:gravity="center"
                android:text="@string/log_in_button_label"
                android:textColor="#000"
                android:textSize="@dimen/login_signup_text_size"/>

        </com.pair.view.LinearLayout>

    </android.support.v7.widget.CardView>

    <com.rey.material.widget.TextView
        android:id="@+id/tv_signup"
        style="@style/FlatWaveColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_sign_up_pane"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/signup_have_an_account_padding"
        android:text="@string/dont_have_an_account_sign_up"
        android:textColor="@android:color/white"
        android:textSize="@dimen/signup_have_an_account_size"/>
</com.pair.view.RelativeLayout>
