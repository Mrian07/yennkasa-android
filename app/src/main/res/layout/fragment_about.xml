<com.yennkasa.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header"
    tools:context="com.yennkasa.ui.AboutFragment">

    <com.rey.material.widget.TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name_cap"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size_large"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/standard_text_size_small"
        tools:text="1.23.4" />

    <com.rey.material.widget.Button
        android:id="@+id/bt_legal_notice"
        style="@style/FlatButtonRippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copy_right"
        android:layout_marginBottom="@dimen/padding_ll_login_fragment_bottom"
        android:background="#5000"
        android:minHeight="@dimen/big_button_height"
        android:text="@string/legal_notice"
        android:textColor="@color/white"
        android:textSize="@dimen/standard_text_size"
        android:visibility="gone" />

    <com.rey.material.widget.TextView
        android:id="@+id/copy_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_ll_login_fragment_bottom"
        android:text="@string/idea_inc"
        android:textColor="@color/white"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold" />
</com.yennkasa.view.RelativeLayout>
