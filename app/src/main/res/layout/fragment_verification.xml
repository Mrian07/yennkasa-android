<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/preferred_primary_color"
    tools:context="com.pair.pairapp.ui.VerificationFragment">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_32dp"
        android:paddingTop="8dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:text="@string/subtitle"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_verification_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/st_send_verification_notice"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/ll_edittext_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_verification_notice"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/st_hint_et_verification"
                android:inputType="number" />

            <com.rey.material.widget.Button
                android:id="@+id/bt_verify"
                style="@style/RaiseWaveColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#225eb964"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/verify"
                android:textColor="#000"
                android:textSize="16sp" />

            <com.rey.material.widget.Button
                android:id="@+id/bt_resend_token"
                style="@style/RaiseWaveColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#225eb964"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/st_send_again"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.rey.material.widget.TextView
        android:id="@+id/tv_back_to_login"
        style="@style/FlatWaveColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_edittext_pane"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/st_back_login"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>
