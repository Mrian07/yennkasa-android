<com.pair.view.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preferred_primary_color"
    android:gravity="center_horizontal|top"
    android:paddingTop="@dimen/login_in_fragment_margin_top"
    tools:context="com.pair.ui.VerificationFragment">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/tv_app_name_title_padding_top"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:text="@string/subtitle"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sub_title_text_size"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/tv_verification_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginTop="@dimen/padding_ll_login_fragment_top"
        android:gravity="center"
        android:padding="@dimen/padding_ll_login_fragment_bottom"
        android:text="@string/st_send_verification_notice"
        android:textColor="@color/white"
        android:textSize="@dimen/sub_title_text_size"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/ll_edittext_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_verification_notice"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <com.pair.view.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_ll_login_fragment_bottom">

            <EditText
                android:id="@+id/et_verification"
                style="@style/phone_number_editText_style"
                android:layout_height="wrap_content"
                android:hint="@string/st_hint_et_verification"
                android:inputType="number"
                android:paddingTop="@dimen/padding_ll_login_fragment_top"/>

            <com.rey.material.widget.Button
                android:id="@+id/bt_verify"
                style="@style/RaiseWaveColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginTop="@dimen/padding_ll_login_fragment_top"
                android:background="#225eb964"
                android:gravity="center"
                android:text="@string/verify"
                android:textSize="@dimen/standard_text_size"/>

            <com.rey.material.widget.Button
                android:id="@+id/bt_resend_token"
                style="@style/RaiseWaveColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginTop="10dp"
                android:background="#225eb964"
                android:gravity="center"
                android:text="@string/st_send_again"
                android:textSize="@dimen/standard_text_size"/>
        </com.pair.view.LinearLayout>
    </android.support.v7.widget.CardView>

    <com.rey.material.widget.TextView
        android:id="@+id/tv_back_to_login"
        style="@style/FlatWaveColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_edittext_pane"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/st_back_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/standard_text_size"/>
</com.pair.view.RelativeLayout>
