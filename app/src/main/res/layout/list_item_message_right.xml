<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="1.5dp"
    android:paddingBottom="1.5dp"
    android:paddingLeft="1.5dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_msg_you"
        android:gravity="right"
        android:maxWidth="300dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="should not be longer than 300dp otherwise something "
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_message_content"
        android:layout_below="@+id/tv_message_content"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="date sent"
        android:textSize="12sp"
        android:textColor="#444"/>
</RelativeLayout>

