<com.pair.view.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            tools:context="com.pair.ui.ItemsSelector"
                            tools:ignore="RtlHardcoded">

    <EditText
        android:id="@+id/et_filter_input_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_action_search"
        android:ems="10"
        android:hint="@string/abc_search_hint"
        android:inputType="textFilter"
        android:visibility="gone"
        android:textSize="@dimen/edit_text_size"
        />

    <com.pair.view.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/standard_text_size"
            android:text="@string/nothing_to_display"/>

        <GridView
            android:id="@+id/gv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="multipleChoice"
            android:columnWidth="64dp"
            android:numColumns="auto_fit"
            android:fadingEdge="none"
            android:stretchMode="columnWidth"
            android:transcriptMode="disabled"/>

        <ListView
            android:id="@+id/lv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:choiceMode="multipleChoice"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:transcriptMode="disabled"/>
    </com.pair.view.FrameLayout>

    <Button
        android:id="@id/bt_add"
        style="@style/FlatWaveColorButtonRippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@drawable/round_corners"
        android:padding="2dp"
        android:text="@string/add_custom"
        android:textColor="@color/white"
        android:visibility="gone"/>
</com.pair.view.LinearLayout>
