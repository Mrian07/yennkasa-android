<com.pair.view.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.pair.pairapp.ui.ItemsSelector">

    <com.pair.view.LinearLayout
        android:id="@+id/ll_filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_filter_input_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="0.7"
            android:inputType="textFilter" />

        <com.rey.material.widget.Button
            android:id="@id/bt_add"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:minHeight="36dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            android:visibility="gone"
            style="@style/FlatWaveColorButtonRippleStyle"
            android:text="ADD" />
    </com.pair.view.LinearLayout>

    <com.pair.view.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nothing to display" />

        <GridView
            android:id="@+id/gv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="multipleChoice"
            android:columnWidth="64dp"
            android:numColumns="auto_fit"
            android:transcriptMode="normal"
            android:stretchMode="columnWidth" />

        <ListView
            android:id="@+id/lv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transcriptMode="normal"
            android:choiceMode="multipleChoice" />
    </com.pair.view.FrameLayout>
</com.pair.view.LinearLayout>
