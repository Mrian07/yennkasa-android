<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date_header_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/message_spacing_normal" />

    <TextView
        android:id="@+id/tv_log_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/date_message_paddingTop"
        android:textColor="@color/black"
        android:textSize="@dimen/log_message_text_size"
        tools:text="2/2/2015" />

    <include
        layout="@layout/message_spacing_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_body_margin" />
</LinearLayout>
