<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    app:popupTheme="@style/popup_theme"
    app:theme="@style/AppBar">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/et_filter_input_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="@string/search_hint"
            android:imeActionId="@integer/imei_search_add"
            android:inputType="text"
            android:paddingLeft="@dimen/padding_ll_login_fragment_right"
            android:paddingRight="@dimen/padding_ll_login_fragment_right"
            android:textColor="@android:color/white"
            android:textColorHint="@color/faded_white" />

        <ImageButton
            android:id="@+id/clear_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/padding_ll_login_fragment_right"
            android:layout_marginRight="@dimen/padding_ll_login_fragment_right"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/cancel"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:src="@drawable/ic_clear_white_24dp" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>
