<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="incoming_message_body_root_view">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/bg_msg_incoming</item>
    </style>

    <style name="outgoing_message_body_root_view">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_msg_outgoing</item>
    </style>

    <style name="message_incoming" parent="base_message_style">
        <item name="android:gravity">left</item>
        <item name="android:background">#0fff</item>
        <item name="android:textColor">#222</item>
    </style>

    <style name="message_out_going" parent="base_message_style">
        <item name="android:gravity">right</item>
        <item name="android:background">#0fff</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/fl_message_body_view</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="message_incoming_date" parent="base_date_style">
        <item name="android:layout_alignLeft">@+id/fl_message_body_view</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="message_outgoing_date" parent="base_date_style">
        <item name="android:layout_alignRight">@+id/fl_message_body_view</item>
        <item name="android:textColor">#444</item>
    </style>
</resources>