<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_message_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/message_text_item_max_width</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:paddingLeft">@dimen/message_padding</item>
        <item name="emojiconSize">@dimen/message_text_size</item>
        <item name="android:paddingRight">@dimen/message_padding</item>
        <item name="emojiconAlignment">baseline</item>
        <item name="android:paddingTop">@dimen/what_ever_name_dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="incoming_message_body_root_view">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/bg_msg_incoming_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/default_gap</item>
    </style>

    <style name="outgoing_message_body_root_view">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_msg_outgoing_normal</item>
        <item name="android:layout_marginBottom">@dimen/default_gap</item>
    </style>

    <style name="message_incoming" parent="base_message_style">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="message_outgoing" parent="base_message_style">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="base_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/fl_message_body_view</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size_small</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="message_incoming_date" parent="base_date_style">
        <item name="android:paddingLeft">@dimen/message_padding</item>
        <item name="android:layout_alignLeft">@id/fl_message_body_view</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingRight">@dimen/message_padding</item>
    </style>

    <style name="message_outgoing_date" parent="base_date_style">
        <item name="android:paddingRight">@dimen/message_padding</item>
        <item name="android:paddingLeft">@dimen/message_padding</item>
    </style>

    <item name="fl_message_body_view" type="id" />
</resources>
