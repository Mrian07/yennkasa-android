<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="password_editText_style" parent="base_style">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="username_editText_style" parent="base_style">
        <item name="android:hint">@string/username_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_ll_login_fragment_left</item>
    </style>

    <style name="city_edittext_style" parent="base_style">
        <item name="android:hint">@string/city_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_ll_login_fragment_left</item>
    </style>

    <style name="phone_number_editText_style" parent="base_style">
        <item name="android:hint">@string/phone_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="base_text_box_chat_feed_back">
        <item name="android:inputType">text|textMultiLine|textLongMessage</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="message_edittext_style" parent="base_text_box_chat_feed_back">
        <item name="android:maxHeight">@dimen/multiline_text_box_max_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:hint">@string/message_box_hint</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:background">@drawable/messge_edit_text_background</item>
        <item name="android:paddingRight">8dp</item>

    </style>

    <style name="feedback_edittext_style" parent="base_text_box_chat_feed_back">
        <item name="android:background">@drawable/messge_edit_text_background</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">8dp</item>
    </style>

    <string name="city_hint">town/city (optional)</string>
</resources>
